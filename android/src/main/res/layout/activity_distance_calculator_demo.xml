<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment
        android:id="@+id/mapInPolyline"
        android:name="com.huawei.hms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/oneLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="one-latitude"
        android:singleLine="true"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/oneLongtitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="one-longtitude"
        android:singleLine="true"
        android:textSize="10sp" />
    <EditText
        android:id="@+id/anotherLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="another-latitude"
        android:singleLine="true"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/anotherLongtitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="another-longtitude"
        android:singleLine="true"
        android:textSize="10sp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setOnePoint"
        android:text="setOne"
        android:onClick="setOne"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setAnother"
        android:text="setAnother"
        android:onClick="setAnother"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distance"
        android:text="calculator"
        android:onClick="distanceCompute"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/result"/>
</LinearLayout>