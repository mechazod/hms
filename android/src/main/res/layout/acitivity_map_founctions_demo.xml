<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/getMaxZoomLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getMaxZoomLevel"
                android:text="MaxZoomLevel"/>

            <Button
                android:id="@+id/getMinZoomLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getMinZoomLevel"
                android:text="MinZoomLevel"/>

            <Button
                android:id="@+id/getMapType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getMapType"
                android:text="getMapType"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/setMapType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setMapType"
                android:text="setMapType"/>


            <Button
                android:id="@+id/is3DMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="is3DMode"
                android:text="is3DMode"/>

            <Button
                android:id="@+id/Set3DMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Set3DMode"
                android:text="Set3DMode"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/setMaxZoomPreference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setMaxZoomPreference"
                android:text="setMaxZoomPreference"/>


            <Button
                android:id="@+id/setMinZoomPreference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setMinZoomPreference"
                android:text="setMinZoomPreference"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/resetMinMaxZoomPreference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="resetMinMaxZoomPreference"
                android:text="resetMinMaxZoomPreference"/>

            <Button
                android:id="@+id/setPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPadding"
                android:text="setPadding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/paddingleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="left"/>

            <EditText
                android:id="@+id/paddingright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="right"/>

            <EditText
                android:id="@+id/paddingtop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="top"/>

            <EditText
                android:id="@+id/paddingbottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="bottom"/>

            <EditText
                android:id="@+id/maxZoomlevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="maxZoom"/>

            <EditText
                android:id="@+id/minZoomlevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="minZoom"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:onClick="testMaxZoom"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/founctionsshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="show is here"/>
        </LinearLayout>
    </LinearLayout>


    <fragment
        android:id="@+id/mapInFunctions"
        android:name="com.huawei.hms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
